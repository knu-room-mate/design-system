{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",

        "jsx": "react",
        "target": "ES2020",

        "strict": true,
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable", "ESNext"],
        "skipLibCheck": true,

        "moduleResolution": "bundler",

        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,

        /* Linting */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["package/*"]
        }
    },
    "include": ["package", "index.ts"]
}
